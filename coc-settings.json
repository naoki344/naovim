{
	"suggest.timeout": 5000,
	"coc.preferences.previewAutoClose": false,
	"suggest.maxPreviewWidth": 100,
	"suggest.snippetIndicator": " >>",
	"suggest.maxCompleteItemCount": 40,
	"suggest.keepCompleteopt": true,
	"diagnostic.enable": true,
	"diagnostic.virtualText": true,
	"diagnostic.virtualTextPrefix": " >> ",
	"diagnostic.checkCurrentLine": true,
	"signature.maxWindowHeight": 25,
	"signature.preferShownAbove": false,
	"signature.hideOnTextChange": false,
	"coc.source.file.enable": false,
	"coc.source.buffer.enable": false,
	"languageserver": {
		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			],
			"ignoredRootPaths": [
				"~"
			]
		},
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.work",
				"go.mod",
				".vim/",
				".git/",
				".hg/"
			],
			"filetypes": [
				"go"
			],
			"initializationOptions": {
				"usePlaceholders": true
			}
		}
	},
	"python.pythonPath": "~/.venv/fbz/bin/python3",
	"coc.preferences.rootPatterns": [
		".vim",
		".git",
		".hg",
		".projections.json"
	],
	"python.linting.enabled": false,
	"python.linting.pylintEnabled": true,
	"python.linting.mypyEnabled": false,
	"python.linting.mypyArgs": [
		"--ignore-missing-imports",
		"--follow-imports=silent",
		"--show-column-numbers"
	],
	"python.linting.flake8Enabled": true,
	"python.linting.lintOnSave": false,
	"coc.preferences.formatOnSaveFiletypes": [
		"xml",
		".xml",
		"json",
		".json"
	],
	"codeLens.enable": true,
	"jedi": {
		"enable": true,
		"startupMessage": false
	},
	"coc.preferences.jumpCommand": "tabe",
	"python.autoComplete.extraPaths": [
		"${PYTHONPATH}"
	]
}
